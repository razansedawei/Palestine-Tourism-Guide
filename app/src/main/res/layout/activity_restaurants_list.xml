<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    android:background="@drawable/profilebackground"
tools:context=".MainActivity">
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        app:menu="@menu/navigation_bar"/>

    <com.smarteist.autoimageslider.SliderView
    android:id="@+id/imageSlider"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    app:sliderAnimationDuration="600"
    app:sliderAutoCycleDirection="back_and_forth"
    app:sliderAutoCycleEnabled="true"
    app:sliderIndicatorAnimationDuration="600"
    app:sliderIndicatorGravity="center_horizontal|bottom"
    app:sliderIndicatorMargin="15dp"
    app:sliderIndicatorOrientation="horizontal"
    app:sliderIndicatorPadding="3dp"
    app:sliderIndicatorRadius="2dp"
    app:sliderIndicatorSelectedColor="#5A5A5A"
    app:sliderIndicatorUnselectedColor="#FFF"
    app:sliderScrollTimeInSec="1"
    app:sliderStartAutoCycle="true" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:layout_below="@+id/imageSlider">
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:layout_weight="8"
            android:orientation="vertical">
            <Button
                android:layout_marginBottom="30dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:id="@+id/location1"
                android:background="@drawable/ic_location_on_black_24dp"/>
            
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"

                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/b1"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:text="Orgada Burger"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp"
                        style="?android:attr/borderlessButtonStyle"/>

                    <ToggleButton
                        android:id="@+id/button_favorite_b1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/button_favorite"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:text="Orgada Burger"
                        android:textOff=""
                        android:textColor="@android:color/transparent"
                        android:textOn="Orgada Burger" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"

            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="Pizza House"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    style="?android:attr/borderlessButtonStyle"/>

                <ToggleButton
                    android:id="@+id/button_favorite_b2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_favorite"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text="Pizza House"
                    android:textColor="@android:color/transparent"
                    android:textOff=""
                    android:textOn="Pizza House" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"

            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b3"
                    android:layout_width="281dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="Alf Layla W Layla"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    style="?android:attr/borderlessButtonStyle"/>

                <ToggleButton
                    android:id="@+id/button_favorite_b3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_favorite"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text="Alf Layla W Layla"
                    android:textOff=""
                    android:textColor="@android:color/transparent"
                    android:textOn="Alf Layla W Layla" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b4"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="90's Burger"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    style="?android:attr/borderlessButtonStyle"/>

                <ToggleButton
                    android:id="@+id/button_favorite_b4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_favorite"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text="90's Burger"
                    android:textOff=""
                    android:textColor="@android:color/transparent"
                    android:textOn="90's Burger" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"

            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b5"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="Nosha Cafe"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    style="?android:attr/borderlessButtonStyle"/>

                <ToggleButton
                    android:id="@+id/button_favorite_b5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_favorite"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text="Nosha Cafe"
                    android:textOff=""
                    android:textColor="@android:color/transparent"
                    android:textOn="Nosha Cafe" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"

            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b6"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="KFC"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    style="?android:attr/borderlessButtonStyle"/>

                <ToggleButton
                    android:id="@+id/button_favorite_b6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_favorite"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text="KFC"
                    android:textOff=""
                    android:textColor="@android:color/transparent"
                    android:textOn="KFC" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>